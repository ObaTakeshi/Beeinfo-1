<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :category %>
    <% count = 1 %>
    <% @user.user_categories.each do |user_category| %>
      <%= f.fields_for :user_categories, user_category do |uc| %>
        <%= count %>
        <%= uc.hidden_field :priority, :value => count %>
        <%= uc.collection_select :category_id, Category.all, :id, :name %>
        <br>
        <% count += 1%>
      <% end %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :layout %><br>
<%= f.radio_button :Layout_id, 1 %> <%= f.label :rate_1, 1 %>
<%= f.radio_button :Layout_id, 2 %> <%= f.label :rate_2, 2 %>
<%= f.radio_button :Layout_id, 3 %> <%= f.label :rate_3, 3 %>

  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
