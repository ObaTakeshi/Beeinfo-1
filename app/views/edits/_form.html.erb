<%= form_for(edit) do |f| %>
  <% if edit.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(edit.errors.count, "error") %> prohibited this edit from being saved:</h2>

      <ul>
      <% edit.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :user %>
    <%= f.text_field :user %>
  </div>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :date %>
    <%= d = Date.today %>
    <%= f.hidden_field :date, :value => d.year.to_s + '-' + d.month.to_s + '-' + d.day.to_s %>
  </div>

  <div class="field">
    <%= f.label :twitter_data %>
    <%= f.collection_check_boxes :twitter_datum_ids, TwitterDatum.all, :id, :tweet %>
  </div>

  <div class="field">
    <%= f.label :category_id %>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>

  <div class="field">
    <%= f.label :text %>
    <%= f.text_area :text %>
  </div>

  <div class="field">
    <%= f.label :url %>
    <%= f.text_field :url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
