      <tr><td>user_id</td><td><%= art.user_id %></td></tr>
      <tr><td>user_icon_url</td><td><%= art.user_icon_url %></td></tr>
      <tr><td>tweet_time</td><td><%= art.tweet_time %></td></tr>
      <tr><td>image_url</td><td><%= art.image_url %></td></tr>
